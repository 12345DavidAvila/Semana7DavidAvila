<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7DavidAvila.Registrar">
    <ScrollView>
        <StackLayout Padding="20" Spacing="30">
            <Label Text="Nombre:"/>
            <Entry Placeholder="Introduce tu Nombre" x:Name="Nombre"/>
            <Label Text="Usuario:"/>
            <Entry Placeholder="Escribe tu usurio" Keyboard="Email" x:Name="Usuario"/>
            <Label Text="Contraseña:"/>
            <Entry Placeholder="Elige una contraseña" IsPassword="True" x:Name="Contrasenia"/>
            
            <Button x:Name="btn_agregar" Text="Agregar"
                    Clicked="btn_agregar_Clicked" Background="Azure"/>
        </StackLayout>
    </ScrollView>
</ContentPage>